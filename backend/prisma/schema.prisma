generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model McriapChannel {
  id              BigInt   @id @default(autoincrement())
  network         String
  agencyName      String
  physicalAddress String
  serviceName     String
  bandwidthKbps   Int
  tariffPlan      String
  connectionType  String
  provider        String
  region          String
  ipAddress       String
  p2pIp           String
  manager         String
  updatedAt       DateTime @default(now())
  updatedBy       String

  @@map("channels")
}

model MioChannel {
  id          BigInt   @id @default(autoincrement())
  provider    String
  serviceName String
  ipAddress   String
  updatedAt   DateTime @default(now())
  updatedBy   String
}